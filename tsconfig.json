{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "types": ["node", "multer"],
		"paths": {
			"@dto/*": ["./src/core/dto/*"],
			"@entity": ["./src/core/entities/index.ts"],
			"@abstract": ["./src/core/abstracts/index.ts"]
		}
  }
}
